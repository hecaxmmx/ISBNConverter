{

  "manifest_version": 2,
  "name": "PCN ISBN Converter",
  "version": "1.0",
  "homepage_url": "https://github.com/hecaxmmx/ISBNConverter",
  "description": "ISBN Converter Tool for use with Integrated Library Systems in web environments",
  "icons": {
    "48": "icons/barcode48.svg"
  },


 "permissions": [
    "activeTab",
    "notifications"
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/barcode32.svg",
    "default_title": "ISBN Converter",
    "default_popup": "popup/pcnisbncnvt.html"
  }

}
